{
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    },
    "exclude": [
      "node_modules",
    ]
  },
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es5",
    "lib": ["es5", "es6", "dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
  ],
  "exclude": [
    "node_modules",
    "ocr_helper/pdf.js",
    "ocr_helper/pdf.worker.js"
  ]
}
